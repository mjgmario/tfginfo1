<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Funcionalidad.LoginPackage.ChatsUsuario.ChatsUsuarioActivity"
    android:background="#888982">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barChatAnadirUsuario"
        android:background="@color/my_custom_color">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="#081039">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <ImageButton
                    android:id="@+id/botonAtrasAnadirChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/nombreusuarioAnadirChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Teclea el nombre "
                    android:textColor="#141314"/>
                <Button
                    android:id="@+id/botonAnadirUsuarioChatAnadir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Anadir"
                    />


            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#888982"
            android:layout_below="@id/barChatAnadirUsuario">
            <TextView
                android:id="@+id/mensajeErrorAnadirChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#CD2413"
                android:text="Fallo"
                android:visibility="gone"
                />


        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>



</RelativeLayout>



