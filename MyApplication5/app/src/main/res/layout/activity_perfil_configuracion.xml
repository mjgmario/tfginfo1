<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#888982"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barChat"
        android:background="@color/my_custom_color">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="#081039"
            >


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/botonAtrasCambiarPerfil"
                    android:layout_width="58dp"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:shadowColor="#28F1EF"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:text="@string/he_estado" />
                <TextView
                    android:id="@+id/textEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:text="Edita tu perfil"
                    android:textColor="#F0D033"
                    android:textSize="20dp"
                    />


            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textCambiarFotoPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barChat"
        android:fontFamily="sans-serif-black"
        android:gravity="left"
        android:text="Cambia tu foto de perfil"
        android:textColor="#231B1A"
        android:textSize="25dp" />


    <ImageView
        android:id="@+id/imagenDescPerfil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textCambiarFotoPerfil"
        android:src="@drawable/ic_launcher_background"

        />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenDescPerfil"
        android:text="Elige foto"

        />
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar foto"
        android:layout_below="@+id/btnChoose"
        />
    <TextView
        android:id="@+id/textDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChoose"
        android:fontFamily="sans-serif-black"
        android:gravity="left"
        android:text="Cambia tu descripcion"
        android:textColor="#231B1A"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/editTextDescripcionPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:layout_below="@+id/textDescripcion" />

    <Button
        android:id="@+id/botonEditarDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDescripcionPerfil"
        android:text="Cambiar descripcion" />


</RelativeLayout>


