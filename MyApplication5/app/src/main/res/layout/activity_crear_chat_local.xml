<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Funcionalidad.LoginPackage.ChatsUsuario.ChatsUsuarioActivity"
    android:background="#888982">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barCompartir"
        android:background="@color/my_custom_color">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="#081039">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <ImageButton
                    android:id="@+id/botonAtrasCrearChatNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/textNuevoChatNombreUsuarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#F0D033"
                    android:text="Nuevo chat" />


            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#888982"
        android:layout_below="@id/barCompartir">
        <TextView
            android:id="@+id/TextChatNombrelocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#F0D033"
            android:text="Nombre del chat: "
            />

        <EditText
            android:id="@+id/editTextNombreCrearChatLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Nombre chat"
            />
        <TextView
            android:id="@+id/TextLocalAsociado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#F0D033"
            android:text="Nombre del local asociado: "
            />

        <EditText
            android:id="@+id/editTextNombreLocalAsociado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Nombre local"
            />
        <TextView
            android:id="@+id/TextDescripcionCrearChatLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#F0D033"
            android:text="Inserta descripciÃ³n del chat: "
            />

        <EditText
            android:id="@+id/editTextDescripcionChatLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Descripcion"
            />
        <TextView
            android:id="@+id/TextErrorChatLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:visibility="gone"
            android:fontFamily="sans-serif-black"
            android:textColor="#E71A1A"
            android:text="Error "
            />
    </LinearLayout>

    <Button
        android:id="@+id/botonFinalizarCrearChatLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="Finalizar" />



</RelativeLayout>

