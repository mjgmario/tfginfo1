<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view2="https://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container"
    android:paddingLeft="10dp"
    tools:context=".Funcionalidad.LoginPackage.paginaInicio.InicioActivity"
    >

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view2:cardBackgroundColor="#32D8AB"
        card_view2:cardCornerRadius="10dp"
        card_view2:cardElevation="5dp"
        card_view2:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/nombre_sitios_he_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Pacha"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#81F128"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/iconoMapsHasEstadoInicio"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_toRightOf="@+id/nombre_sitios_he_estado"
                android:src="@drawable/ic_baseline_location_on_24" />
            <TextView
                android:id="@+id/fecha_sitios_he_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Android Version"
                android:textSize="10dp"
                android:layout_below="@+id/nombre_sitios_he_estado"
            android:textColor="#28F1EF"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>





